<div class='box tabular new_issue'>
  <%= form_for(@action_plan, url: create_action_plan_path(risk_id: params[:risk_id])) do |f| %>
      <% if @action_plan.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@action_plan.errors.count, "error") %> prohibited this action_plan from being saved:</h2>

            <ul>
              <% @action_plan.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="splitcontentright">
        <p>
          <%= f.label :effective %>
          <%= f.check_box :effective %>
        </p>
      </div>
      <p>
        <label for="action_plan_title"><%= ActionPlan.human_attribute_name :title %> <span class="required">*</span></label>
        <%= f.text_field :title, :required => true %>
      </p>
      <p>
        <%= f.label :kind %>
        <%= f.select(:kind, options_for_select(options_for_kind, @action_plan.kind), id: 'risk_kind', prompt: t('.select_one_kind')) %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'wiki-edit', :rows => 10, :cols => 60 %>
      </p>
      <p>
        <%= f.label :assigned_to %>
        <%= f.collection_select(:assigned_to, User.joins(:members).where("members.project_id = ?", @project.id), :id, :name, prompt: t('.select_one_member') ) %>
      </p>
      <p>
        <%= f.label :term %>
        <%= f.text_field :term %>
        <%= calendar_for('action_plan_term') %>
      </p>
      <p>
        <%= f.label :finish_date %>
        <%= f.text_field :finish_date %>
        <%= calendar_for('action_plan_finish_date') %>
      </p>
      <p>
        <%= label_tag t('.associated_risk') %>
        <%= text_field_tag '', @risk.title, readonly: true %>
      </p>
      <p>
        <%= f.submit %>
      </p>
  <% end %>
</div>