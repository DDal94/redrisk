<div class="issue">
  <div class="subject">
    <h3>Title:
      <%= @risk.title %>
    </h3>
  </div>
  <br />

  <table class="attributes">
    <tr>
      <th>Status:</th>
      <td><%= Risk.status_to_text(@risk.status) %></td>
      <th>Effort:</th>
      <td><%= @risk.effort %></td>
    </tr>

    <tr>
      <th>Origin:</th>
      <td><%= Risk.origin_to_text(@risk.origin) %></td>
      <th>Cost:</th>
      <td><%= number_to_currency @risk.cost %></td>
    </tr>

    <tr>
      <th>Description:</th>
      <td><%= @risk.description %></td>
    </tr>

    <tr>
      <th>Source:</th>
      <td><%= Risk.source_to_text(@risk.source) %></td>
      <th>Identification date:</th>
      <td><%= @risk.identification_date %></td>
    </tr>

    <tr>
      <th>Category:</th>
      <td><%= Risk.category_to_text(@risk.category) %></td>
      <th>Created by:</th>
      <td><%= User.find(@risk.created_by).name unless @risk.created_by.nil? %></td>
    </tr>

    <tr>
      <th>Probability:</th>
      <td><%= Risk.probability_to_text(@risk.probability) %></td>
      <th>Assigned to:</th>
      <td><%= User.find(@risk.assigned_to).name unless @risk.assigned_to.nil? %></td>
    </tr>

    <tr>
      <th>Impact:</th>
      <td><%= Risk.impact_to_text(@risk.impact) %></td>
      <th>Strategy:</th>
      <td><%= Risk.strategy_to_text(@risk.strategy) %></td>
    </tr>

    <tr>
      <th>Priority:</th>
      <td><%= Risk.priority_to_text(@risk.priority) %></td>
    </tr>

    <tr>
      <th>Trigger:</th>
      <td><%= @risk.trigger %></td>
    </tr>
  </table>

</div>